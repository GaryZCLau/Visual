<h1> <%= @blog.title %> </h1>
<hr>
<br>

<p> <%= @blog.text %> </p>

<br>
<% @blog.summaries.each do |summary| %>
    <% if logged_in? && logged_in_user.id == summary.profile_id %>
        <%= link_to "Edit this blog", edit_blog_path %>
    <% end %>
<% end %>
<br><br>

<% @blog.profiles.each do |profiles| %>
<%= link_to "Back to profile", profile_path(profiles) %>
<% end %>